  "devDependencies": {
    "@swc/core": "1.13.5",
    "@swc/jest": "0.2.39",
    "@types/cookie-parser": "^1",
    "@types/cors": "^2",
    "@types/express": "5.0.3",
    "@types/hpp": "^0",
    "@types/jest": "30.0.0",
    "@types/morgan": "^1",
    "@types/node": "24.7.0",
    "@types/supertest": "6.0.3",
    "@types/xss-filters": "^1",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "jest": "30.2.0",
    "mongodb-memory-server": "10.2.3",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-jest": "29.4.4",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0"
  }
