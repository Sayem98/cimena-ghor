  "dependencies": {
    "@casl/ability": "6.7.3",
    "@casl/mongoose": "8.0.3",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-mongo-sanitize": "2.2.0",
    "express-rate-limit": "8.1.0",
    "helmet": "8.1.0",
    "hpp": "0.2.3",
    "mongoose": "^8.19.1",
    "morgan": "1.10.1",
    "winston": "3.18.3",
    "xss-filters": "1.2.7",
    "zod": "4.1.12"
